.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "Categories", categories_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Categories
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.category.title", :default => t("activerecord.labels.title", :default => "Title"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @categories.each do |category|
          %tr{:class => cycle("odd", "even")}
            %td
              = category.id
            %td
              = category.title
            %td
              = category.created_at.to_s(:short)
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", category_galleries_path(category.title)
      .actions-bar.wat-cf
        .actions
