.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "Back", categories_path
      %li.active= link_to "Current", category_galleries_path
  .content
    .inner
      .content
        .inner
          %br
          - @galleries.each do |img|
            = link_to category_gallery_path(img.category.title, img.id) do
              %div{:style => "float:left;margin-right: 30px"}
                %p= "Like: #{img.likes_count.to_i}"
                %p= "Comments: #{img.comments_count.to_i}"
                %p= image_tag img.image(:thumb)
          .clear
      = will_paginate @galleries
      .clear
